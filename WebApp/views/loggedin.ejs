    <script type="text/javascript">
        var latitude;
        var longitude;
        var totalPoints = <%= totalPoints%>

        document.addEventListener('DOMContentLoaded', init, false);
        function init(){
            function pt1 () {
                totalPoints += 1;
                $( "#points" ).html(totalPoints);
                form_send(1);
            }
            function pt2 () {
                totalPoints += 2;
                $( "#points" ).html(totalPoints);
                form_send(2);
            }
            function pt3 () {
                totalPoints += 3;
                $( "#points" ).html(totalPoints);
                form_send(3);
            }
            function pt5 () {
                totalPoints += 5;
                $( "#points" ).html(totalPoints);
                form_send(5);
            }
            var btn1 = document.getElementById('pt1');
            btn1.addEventListener('click', pt1, true);
            var btn2 = document.getElementById('pt2');
            btn2.addEventListener('click', pt2, true);
            var btn3 = document.getElementById('pt3');
            btn3.addEventListener('click', pt3, true);
            var btn5 = document.getElementById('pt5');
            btn5.addEventListener('click', pt5, true);

        };

    function form_send(pointAmt){
        if (navigator.geolocation) {
            navigator.geolocation.getCurrentPosition(
                function coords(position) {
                    longitude = position.coords.longitude;
                    latitude = position.coords.latitude;
                    console.log("Longitude"+longitude);
                    console.log("Latitude"+latitude);

                    $.ajax({
                        type: "POST",
                        url: "/addPoint",
                        data: { long: longitude, lat: latitude, pointValue:pointAmt, total:totalPoints }
                    })
                    .done(function( msg ) {
                        //alert("DONE");
                    });

                }, function (error) {
                    alert("Error: " + error.code);
                },
                {
                    enableHighAccuracy : true,
                    timeout : 10000,
                    maximumAge : 1000
                });



            } else {
                alert ("GEOLOCATION NOT SUPPORTED....");
            }
        }


        </script>
